<h1 class="title">Your Stories</h1>

<% @stories.each do |story| %>
    <div class="content">
        <h2 class="title">
            <%= link_to story.title, edit_story_path(story), class: 'has-text-grey-darker' %>
            <%= content_tag :span, 'published', class: 'tag is-primary' if story.published? %>
        </h2>
        <p><%= story.content %></p>
        <p> 
            Last Upated at: 
            <%= time_ago_in_words(story.updated_at) %>
            <%= link_to 'Edit', edit_story_path(story),class: 'button is-text is-small' %>
            <%= link_to 'delete', story_path(story), method: 'delete', class: 'button is-text is-small is-danger', data: {confirm: 'Are you sure you want to delete this story?'} %>
        </p>
    </div>
    <hr>
<% end %>

